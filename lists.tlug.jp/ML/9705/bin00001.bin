#!/bin/sh

if [ ! -d wadalab-mincho-0-8 -o ! -d wadalab-sym ] ;then
  echo "I need the following two directories: "
  echo "	wadalab-mincho-0-8"
  echo "	wadalab-sym"
  echo
  echo "They can be found at the following URL's:"
  echo "    ftp://ftp.ipl.t.u-tokyo.ac.jp/Font/wadalab-mincho-0-8.4.tar.Z"
  echo "    ftp://ftp.ipl.t.u-tokyo.ac.jp/Font/wadalab-sym.7.tar.Z"
  exit 1
fi

exit 0

mkdir pfa
mkdir pfa/wadalab-sym
mkdir pfa/wadalab-mincho-0-8
#mkdir pfa/wadalab-gothic-0-13

for i in wadalab-sym/*.ps ; do
  wftopfa FontBase Wadalab-Sym $i >pfa/${i%.ps}.pfa
done

for i in wadalab-mincho-0-8/*.ps ; do
  wftopfa FontBase Wadalab-Mincho-0-8 $i >pfa/${i%.ps}.pfa
done

#for i in wadalab-gothic-0-13/*.ps ; do
